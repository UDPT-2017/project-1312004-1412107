        <div id="messengers-title">
            <h4 style="text-align: center">Messenger</h4>
        </div>

        <div id="other-header">
            <div class="name" style="font-weight: bold">Alex</div>
            <div class="last" style="font-weight: bold">18:09</div>
        </div>
    </div>

    <div id="messenger-wrapper">
        
